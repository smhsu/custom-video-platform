---
// Applies styling to all components
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>PolyVideo</title>
  </head>
  <body class="font-sans">
    <!-- Injects children content into the named slot element -->
    <slot name="header" />
    <div class="flex justify-center">
      <div class="ml-8 mr-8 mt-6">
        <slot name="video" class="m-auto" />
        <slot name="comments" class="m-auto" />
      </div>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
