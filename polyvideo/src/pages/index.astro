---
const menu = [
  {
    section: "Appetizers",
    items: [
      { name: "BRUSCHETTA", price: "$8", description: "Grilled bread with tomato, garlic, and basil." },
      { name: "MOZZARELLA STICKS", price: "$7", description: "Crispy fried cheese sticks with marinara sauce." },
    ],
  },
  {
    section: "Entrees",
    items: [
      { name: "GRILLED SALMON", price: "$22", description: "Salmon with lemon butter sauce." },
      { name: "CHICKEN PARMESAN", price: "$20", description: "Breaded chicken with marinara and mozzarella." },
    ],
  },
  {
    section: "Desserts",
    items: [
      { name: "CHOCOLATE LAVA CAKE", price: "$10", description: "Warm chocolate cake with molten center." },
      { name: "TIRAMISU", price: "$9", description: "Classic espresso-soaked Italian dessert." },
    ],
  },
];
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>ALLY'S RESTAURANT</title>
    <link rel="stylesheet" href="../styles/global.css" />
  </head>
  <body class="bg-white font-sans">
    <main class="max-w-4xl mx-auto p-8">
      <h1 class="text-5xl font-extrabold text-center text-blue-900 mb-12">üçΩÔ∏è Our Restaurant Menu</h1>

      {menu.map(section => (
        <section class="mb-12">
          <h2 class="text-3xl font-bold mb-6 border-b-4 border-blue-900 pb-2 text-blue-900">{section.section}</h2>
          <ul class="grid md:grid-cols-2 gap-6">
            {section.items.map(item => (
              <li class="bg-blue-900 text-white p-6 rounded-xl shadow hover:shadow-lg transition-shadow duration-200">
                <div class="flex justify-between mb-2">
                  <h3 class="font-semibold text-lg">{item.name}</h3>
                  <span class="font-bold">{item.price}</span>
                </div>
                <p class="text-gray-200 text-sm">{item.description}</p>
              </li>
            ))}
          </ul>
        </section>
      ))}
    </main>
  </body>
</html>
